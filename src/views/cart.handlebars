<h1>Carrito</h1>
{{#if products.length}}
<div>
    <h3>Total: $ {{total}}</h3>
    <form action="/cart/{{cartId}}/checkout" method="post">
        <button type="submit">Comprar</button>
    </form>
</div>

{{#each products}}
<div> 
    <h2>★━━━━★ {{this.product.title}} ★━━━━★</h2>
    <p>{{this.product.description}}</p>
    <p>$ {{this.product.price}}</p>
    <p>Cantidad: {{this.quantity}}</p>
    <div>
        <p>Subtotal: ${{this.subtotal}}</p>    
</div>
<form action="/cart/{{../cartId}}/update/{{this._id}}" method="post">
    <input type="hidden" name="quantity" value="1">
    <button type="submit">+1</button>
</form>
<form action="/cart/{{../cartId}}/update/{{this._id}}" method="post">
    <input type="hidden" name="quantity" value="-1">
    <button type="submit">-1</button>
</form>
    <form action="/cart/{{../cartId}}/remove/{{this._id}}" method="post">
        <button type="submit">Eliminar del carrito</button>
    </form>
</div>
{{/each}}
<br><br>
<div>
    <form action="/cart/{{cartId}}/empty" method="post">
        <button type="submit">Vaciar Carrito</button>
</div>

{{else}}
    <p>No hay productos en el carrito</p>
{{/if}}
